    "transpile": "tsc --project ./test"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^1.0.9",
    "@dollarshaveclub/cloudworker": "^0.1.2",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.0",
    "chai": "^4.2.0",
    "mocha": "^7.1.1",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "source-map-loader": "^0.2.4",
    "source-map-support": "^0.5.16",
    "ts-loader": "^7.0.0",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  }
}
